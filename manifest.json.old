{
  "manifest_version": 2,

  "name": "Cookie Doughing",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.1",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "CookieDough.png",
    "default_popup": "popup.html",
    "default_title": "Show me the cookies!"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "notifications"
  ]
}